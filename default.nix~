{ stdenv, haskell-packages, glpk, pcre}:

let
  env = haskell-packages.lts-5_2.ghc;
in
  stdenv.mkDerivation {
    name = "RiziLab";

    buildInputs = [
      glpk
      pcre
      env
    ];

    STACK_IN_NIX_EXTRA_ARGS
      = " --extra-lib-dirs=${glpk}/lib"
      + " --extra-include-dirs=${glpk}/include"
      + " --extra-lib-dirs=${glpk}/lib"
      + " --extra-include-dirs=${glpk}/include"
    ;
  }
